<p><a href="/users/<%= current_user.id %>"> Dash Board</a></p>

<h1><%= @user.first_name %> <%= @user.last_name %>'s Playlist</h1>
    <table border="1">
      <thead>
        <tr>
          <th>Artist</th>
          <th>Title</th>
          <th>Times Added</th>
        </tr>
      </thead>
      <tbody>
        <% Song.all.each do |song| %>
        <% if Add.where(user: @user).where(song: song).count > 0 %>
          <tr>
            <td><%= song.artist %></td>
            <td><%= song.title %></td>
            <td><%= Add.where(user: @user).where(song: song).count %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </body>
</html>