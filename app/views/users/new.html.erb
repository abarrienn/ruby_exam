<h1>Registration</h1>
<div class="row col-lg-6">

		<div class="form-group">
			<form action="/users/create" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
				<p><label for="first_name">First Name: </label>
				<input type="text" name="user[first_name]"></p>

				<p><label for="last_name">Last Name: </label>
				<input type="text" name="user[last_name]"></p>


				<p><label for="email">Email: </label>
				<input type="text" name="user[email]"></p>


				<p><label for="password">Password: </label>
				<input type="password" name="user[password]"></p>
				<p><label for="conf_password">Confirm Password: </label>
				<input type="password" name="user[password_confirmation]"></p>
				<input type="submit" name="submit" value="Submit!!">
			</form>
		</div>
</div>
